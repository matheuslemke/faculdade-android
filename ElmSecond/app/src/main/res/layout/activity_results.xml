<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="br.com.lemke.tcc.elmsecond.ResultsActivity">

    <TextView
        android:id="@+id/textView_Results_Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Train Result"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/textView_Results_ElmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_Results_Result"
        android:layout_toStartOf="@+id/textView_Results_Result"
        android:paddingTop="30dp"
        android:text="ELM Name"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/textView_Results_ElmNameString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_Results_Result"
        android:layout_toEndOf="@+id/textView_Results_ElmName"
        android:paddingTop="30dp"
        android:text="FilenameString"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView_Results_Accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="Accuracy"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textView_Results_Time"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textView_Results_AccuracyFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="AccuracyFloat"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_below="@+id/textView_Results_TimeFloat"
        android:layout_alignEnd="@+id/textView_Results_ElmNameString"
        android:layout_toEndOf="@+id/textView_Results_ElmName"/>

    <TextView
        android:id="@+id/textView_Results_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textView_Results_ElmName"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textView_Results_TimeFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="AccuracyFloat"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_below="@+id/textView_Results_ElmName"
        android:layout_alignStart="@+id/textView_Results_AccuracyFloat"
        android:layout_alignEnd="@+id/textView_Results_ElmNameString"/>

</RelativeLayout>
